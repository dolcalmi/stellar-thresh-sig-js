{
  "name": "stellar-thresh-sig",
  "version": "0.1.0",
  "description": "Stellar Javascript two party threshold signature SDK",
  "main": "./lib/index.js",
  "scripts": {
    "start-p1-server": "node ./examples/thresh-sig-server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf ./.nyc_output ./node_modules/.cache ./coverage ./db",
    "report": "nyc -r text -r lcov report",
    "coveralls": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "mocha": "mocha --bail --recursive --require ./test/mocha.js --exit",
    "pretest": "npm run clean",
    "test": "npm run lint && nyc npm run mocha",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dolcalmi/stellar-thresh-sig-js.git"
  },
  "keywords": [
    "stellar",
    "threshold",
    "threshold-signature",
    "threshold-eddsa"
  ],
  "author": "Juan P Lopez",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/dolcalmi/stellar-thresh-sig-js/issues"
  },
  "homepage": "https://github.com/dolcalmi/stellar-thresh-sig-js#readme",
  "dependencies": {
    "@kzen-networks/thresh-sig": "^0.4.2",
    "elliptic": "^6.5.3",
    "esm": "^3.2.25",
    "stellar-sdk": "^5.0.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.7.0",
    "mocha": "^8.1.2",
    "node-fetch": "^2.6.0",
    "nyc": "^15.1.0"
  }
}
